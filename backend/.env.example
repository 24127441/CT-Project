# Backend environment example (Django)
# Only include variables the backend reads at runtime. Replace placeholders.

# Django core
SECRET_KEY=your_django_secret_key_here
DEBUG=True

# Database (Django supports either DATABASE_URL or individual DB_* vars)
# Example DATABASE_URL: postgres://user:password@host:5432/dbname
DATABASE_URL=
DB_NAME=trekguide_db
DB_USER=postgres
DB_PASSWORD=your_db_password_here
DB_HOST=localhost
DB_PORT=5432

# Email (used for transactional emails)
EMAIL_HOST_USER=your_email@example.com
EMAIL_HOST_PASSWORD=your_email_app_password

# Supabase (server-side settings)
# SUPABASE_URL is used by server code when interacting with Supabase auth/JWKS
SUPABASE_URL=https://your-project-id.supabase.co
# Legacy JWT secret (if your project uses it). Keep this private.
SUPABASE_JWT_SECRET=your_legacy_jwt_secret_here
# Optional: JWKS URL (alternative to JWT secret)
# SUPABASE_JWKS_URL=https://your-project-id.supabase.co/auth/v1/.well-known/jwks.json

# Optional server-only key (do NOT expose this in frontend)
# SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here