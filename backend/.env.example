# ==========================================
# DATABASE SETTINGS
# ==========================================
DB_PASSWORD=your_db_password_here
DB_HOST=localhost
DB_PORT=5432
SECRET_KEY=your_django_secret_key_here
DEBUG=True

# ==========================================
# EMAIL SETTINGS
# ==========================================
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_email_app_password

# ==========================================
# SUPABASE CONFIGURATION (Quan trọng)
# ==========================================

# 1. URL của Project Supabase
SUPABASE_URL=https://your-project-id.supabase.co

# 2. Key Anon (Public Key - Lấy ở API Settings)
SUPABASE_KEY=your_supabase_anon_key_here

# 3. JWT Secret (QUAN TRỌNG NHẤT ĐỂ FIX LỖI 403)
# Lấy tại: Dashboard -> Project Settings -> API -> JWT Settings -> Legacy JWT Secret
SUPABASE_JWT_SECRET=your_legacy_jwt_secret_here

# 4. JWKS URL (Đã tắt để dùng Secret ở trên - Giữ lại để tham khảo)
# SUPABASE_JWKS_URL=https://your-project-id.supabase.co/auth/v1/.well-known/jwks.json